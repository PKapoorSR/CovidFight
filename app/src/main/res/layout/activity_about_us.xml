<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        android:id="@+id/headerLogo"/>
    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:layout_below="@+id/headerLogo"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginTop="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/context"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:layout_below="@+id/header"
        android:textColor="#123"
        android:text=" This is text this is text this is text this is text this is text this is text this is text this is text this is textthis is textvv this is text this is text this is text this is text this is text this is text this is text this is text this is text"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/source"
        android:layout_below="@+id/context"
        android:textSize="15dp"
        android:textColor="#123"
        android:text="text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:layout_below="@id/source"
        android:text="email email eamil eamil"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We can do this together!"
        android:layout_below="@+id/email"
        android:drawableLeft="@drawable/ic_heart"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_centerHorizontal="true"/>





</RelativeLayout>